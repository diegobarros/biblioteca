<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<div id="container">
	<section class="container-artigos">
		<div id="moldura">
			<article id="1">
					
					<header class="verde">
						<h2>Exercício Teclado</h2>
					</header>
					
					
					<%= form_tag(home_verificar_codigo_path, :id => "formulario-captcha", :method => "get") do %>
					
						<fieldset>
							<legend>Captcha</legend>
							
							<%= recaptcha_tags :public_key => '6Le0xdUSAAAAAFyq5UPtKiO13txN467f3MZhTcab', :ajax => true %>
							<%= submit_tag "Confirmar", :class => 'botao botao-azul', :id => "botao-confirmar-captcha" %>
						</fieldset>
					
						<fieldset>
							<legend>Estatísticas</legend>
							
							<label>Acertos: </label>
							<input name="acertos" type="text" value="<%=session[:acertos] %>" readonly="reeadonly" />
							
							
						
							<label>Erros: </label>
							<input name="erros" type="text" value="<%=session[:erros]%>" readonly="reeadonly" />
							
						</fieldset>
						
					<% end %>

					<footer id="rodape-perguntas">
						<ul>
							<li>
								<%= link_to "Sair", home_index_path, :id => "sair-exercitar-teclado", :class =>"botao botao-azul", :value => " " %>
							</li>
							<li> </li>
						</ul>
					</footer>
				</article>
		</div>
	</section>
</div>